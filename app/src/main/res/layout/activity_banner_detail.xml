<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myhome.feature.main.BannerDetailActivity">

    <com.example.myhome.view.scroll.ObservableScrollView
        android:id="@+id/observableScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.example.myhome.view.MyHomeImageView
                    android:id="@+id/image_detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:viewAspectRatio="1.3" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/mainInfoShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/title_banner_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    tools:text="عنوان آگهی" />

                <LinearLayout
                    android:id="@+id/linear_layout_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_banner_show"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/txt_home_size_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:padding="3dp"
                        android:text="HomeSize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_home_size" />

                    <TextView
                        android:id="@+id/txt_number_of_rooms_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="3dp"
                        android:padding="3dp"
                        android:text="Room" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_room" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_location_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout_show"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_location_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout_show"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/img_location_show"
                    android:padding="3dp"
                    tools:text="مکان آگهی" />

                <TextView
                    android:id="@+id/price_banner_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_location_show"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    tools:text="قیمت" />
            </RelativeLayout>

            <TextView
                android:id="@+id/desc_banner_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:text="توضیحات" />
        </LinearLayout>
    </com.example.myhome.view.scroll.ObservableScrollView>


    <RelativeLayout
        android:id="@+id/mainInfoHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:background="@color/gray"
        android:paddingTop="60dp">

        <TextView
            android:id="@+id/title_banner_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="عنوان آگهی" />

        <LinearLayout
            android:id="@+id/linear_layout_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_banner_hide"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txt_home_size_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:padding="3dp"
                android:text="HomeSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_home_size" />

            <TextView
                android:id="@+id/txt_number_of_rooms_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="3dp"
                android:padding="3dp"
                android:text="Room" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_room" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_location_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_hide"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/txt_location_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_hide"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/img_location_hide"
            android:padding="3dp"
            tools:text="مکان آگهی" />

        <TextView
            android:id="@+id/price_banner_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_location_hide"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="قیمت" />
    </RelativeLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/favoriteBtnDetailBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/layout_radius"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_bookmarked" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_radius"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_back" />
    </FrameLayout>

    <include
        android:id="@+id/layout_contact_us"
        layout="@layout/layout_profile"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_edit_or_delete"
        layout="@layout/layout_edit_banner"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>